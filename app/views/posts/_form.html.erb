<%= form_for Post.new do |f| %> <div class="input-group col-xs-8">
  <div class="col-xs-6"><%= f.text_field :content, class: "form-control" %></div>
  <div class="col-xs-6"><%= f.file_field :image, class: "form-control" %></div>
  <div class="col-xs-4"><%= f.submit "Create", class: "btn" %></div>
</div>

<% end %>
