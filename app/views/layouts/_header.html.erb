<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "FBYI", '/', class: "navbar-brand" %>
    <nav>
      <ul class="nav navbar-nav">
        <% if can? :create, Post %>
          <li><%= link_to "Your Styles", user_posts_path( current_user ) %></li>
        <% end %>
          <li><p class="alert_nav"><%= alert %></p></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
            <li><p class="notice_nav"><%= notice %></p></li>
        <% if !user_signed_in? %>
            <li><%= link_to "Log In", new_user_session_path %></li>
        <% else %> <li><span class="navbar-text"><%= current_user.email %></span></li>
            <li><%= link_to "Log Out", destroy_user_session_path, :method => :delete %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
